<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.strangeye.dubalnebal.dao.LikeDao" >

    <insert id="insertLike" parameterType="Map">
        INSERT INTO BoardLike
        VALUES (#{User_user_id}, #{Board_board_id});
    </insert>

    <delete id="disLike" parameterType="com.strangeye.dubalnebal.dto.Like">
        DELETE FROM BoardLike
        WHERE User_user_id = #{User_user_id} AND Board_board_id = #{Board_board_id};
    </delete>


    <select id="selectLikeCnt" parameterType="int" resultType="int">
        SELECT COUNT(Board_board_id)
        FROM BoardLike
        WHERE Board_board_id = #{Board_board_id} AND User_user_id = #{User_user_id};
    </select>


